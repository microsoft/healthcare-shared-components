<Project>

  <Target Name="InstallUbuntuCoreTools" BeforeTargets="BeforeBuild" Condition="$([MSBuild]::IsOSPlatform('Linux'))">
    <Exec Command="$(MSBuildThisFileDirectory)Install/ubuntu-install-tools.sh"/>
  </Target>

  <Target Name="InstallWindowsCoreTools" BeforeTargets="BeforeBuild" Condition="$([MSBuild]::IsOSPlatform('Windows'))">
    <Exec Command="$(MSBuildThisFileDirectory)Install\windows-install-tools.bat"/>
  </Target>

  <Target Name="InstallUnsupportedCoreTools" BeforeTargets="BeforeBuild" Condition="!$([MSBuild]::IsOSPlatform('Linux')) And !$([MSBuild]::IsOSPlatform('Windows'))">
    <Error Text="Operating System not yet supported." />
  </Target>

</Project>
